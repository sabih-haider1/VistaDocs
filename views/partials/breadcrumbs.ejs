<!-- Breadcrumbs Component -->
<% if (typeof breadcrumbs !== 'undefined' && breadcrumbs && breadcrumbs.length > 0) { %>
<nav class="breadcrumbs" aria-label="Breadcrumb">
  <div class="container">
    <ol class="breadcrumb-list">
      <% breadcrumbs.forEach(function(crumb, index) { %>
        <li class="breadcrumb-item">
          <% if (index === breadcrumbs.length - 1) { %>
            <span class="breadcrumb-current" aria-current="page"><%= crumb.label %></span>
          <% } else { %>
            <a href="<%= crumb.path %>" class="breadcrumb-link"><%= crumb.label %></a>
            <span class="breadcrumb-separator" aria-hidden="true">/</span>
          <% } %>
        </li>
      <% }); %>
    </ol>
  </div>
</nav>
<% } %>
