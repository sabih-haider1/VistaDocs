<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% if (service.meta.isIndexable === false) { %>
  <meta name="robots" content="<%= service.meta.seoDirective %>">
  <% } %>
  <meta name="description" content="<%= service.seo.metaDescription %>">
  <title><%= service.seo.title %></title>
  <link rel="icon" type="image/png" href="/img/identity.png">
  <link rel="apple-touch-icon" href="/img/identity.png">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>
  
  <%- include('partials/breadcrumbs') %>
  
  <main>
  <article class="service-detail">
    
    <section class="page-header">
      <div class="container">
        <h1 class="page-title"><%= service.seo.h1 %></h1>
      </div>
    </section>

    <section class="service-content">
      <div class="container">
        <div class="service-layout">
          
          <div class="service-main">
            
            <% service.content.sections.forEach(function(section) { %>
              <div class="content-block" id="<%= section.id %>">
                <h2><%= section.heading %></h2>
                <%- section.content %>
              </div>
            <% }); %>

            <% if (service.faqs && service.faqs.length > 0) { %>
            <div class="content-block">
              <h2>Frequently Asked Questions</h2>
              <div class="faq-list">
                <% service.faqs.forEach(function(faq) { %>
                  <div class="faq-item">
                    <h3 class="faq-question"><%= faq.question %></h3>
                    <p class="faq-answer"><%= faq.answer %></p>
                  </div>
                <% }); %>
              </div>
            </div>
            <% } %>

          </div>

          <% if (service.meta.isIndexable !== false) { %>
          <aside class="service-sidebar">
            
            <div class="sidebar-card cta-card">
              <h3>Get Started</h3>
              <p>Contact us for requirements and timeline specific to your case.</p>
              <a href="/contact" class="btn btn-primary">Contact Us</a>
            </div>

            <% if (service.linking.dependencies && service.linking.dependencies.length > 0) { %>
            <div class="sidebar-card">
              <h3>Included Services</h3>
              <ul class="related-list">
                <% service.linking.dependencies.forEach(function(depSlug) { %>
                  <li><a href="/services/<%= serviceCategory %>/<%= depSlug %>"><%= depSlug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></a></li>
                <% }); %>
              </ul>
            </div>
            <% } %>

            <% if (service.linking.upsells && service.linking.upsells.length > 0) { %>
            <div class="sidebar-card">
              <h3>Upgrade Options</h3>
              <ul class="related-list">
                <% service.linking.upsells.forEach(function(upsellSlug) { %>
                  <li><a href="/services/<%= serviceCategory %>/<%= upsellSlug %>"><%= upsellSlug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></a></li>
                <% }); %>
              </ul>
            </div>
            <% } %>

            <% if (service.linking.relatedGuides && service.linking.relatedGuides.length > 0) { %>
            <div class="sidebar-card">
              <h3>Related Services</h3>
              <ul class="related-list">
                <% service.linking.relatedGuides.forEach(function(guideSlug) { %>
                  <li><a href="/services/<%= serviceCategory %>/<%= guideSlug %>"><%= guideSlug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></a></li>
                <% }); %>
              </ul>
            </div>
            <% } %>

            <% if (service.linking.integrations && service.linking.integrations.length > 0) { %>
            <div class="sidebar-card">
              <h3>Integration Services</h3>
              <ul class="related-list">
                <% service.linking.integrations.forEach(function(intSlug) { %>
                  <li><a href="/services/<%= serviceCategory %>/<%= intSlug %>"><%= intSlug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></a></li>
                <% }); %>
              </ul>
            </div>
            <% } %>

          </aside>
          <% } %>

        </div>
      </div>
    </section>

  </article>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
